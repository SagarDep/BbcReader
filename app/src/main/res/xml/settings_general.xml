<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/sharedprefs_key_notifications"
        android:title="@string/settings_title_notifications" />

    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="14400"
        android:entries="@array/settings_sync_titles"
        android:entryValues="@array/settings_sync_values"
        android:key="@string/sharedprefs_key_syncfrequency"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/settings_header_sync" />

</PreferenceScreen>